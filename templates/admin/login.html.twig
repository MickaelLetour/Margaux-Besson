{% extends "base.html.twig" %}

{% block title 'Admin/Se connecter' %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-warning">Login</h1>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }}
        </div>
    {% endif %}
    <form action="{{ path("login") }}" method="post">
        <div class="form-group">
            <label for="username" class="text-warning">Nom d'utilisateur</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}"> 
       </div>
   
       <div class="form-group">
           <label for="password" class="text-warning">Nom d'utilisateur</label>
           <input type="password" id="password" name="_password" class="form-control"> 
      </div>
   
      <button type="submit" class="btn btn-dark border border-warning text-warning">Se connecter</button>
   </form>
</div>
{% endblock %}
